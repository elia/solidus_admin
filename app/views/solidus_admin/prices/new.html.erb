<%= render 'solidus_admin/shared/product_tabs', current: 'Prices' %>
<% admin_breadcrumb(link_to(plural_resource_name(Spree::Price), solidus_admin.product_prices_url(@product))) %>
<% admin_breadcrumb(t('spree.actions.new')) %>

<%= form_for [@product, @product.prices.build] do |f| %>
  <fieldset data-hook="admin_product_price_new_form">
    <legend><%= t('spree.admin.prices.new.new_price') %></legend>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'solidus_admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
