<%= render partial: 'solidus_admin/shared/order_tabs', locals: { current: 'Return Authorizations' } %>

<% breadcrumb(link_to plural_resource_name(Spree::ReturnAuthorization), solidus_admin.order_return_authorizations_url) %>
<% admin_breadcrumb(t('spree.new_return_authorization')) %>


<% content_for :page_actions do %>
<% end %>

<%= render partial: 'spree/shared/error_messages', locals: { target: @return_authorization } %>
<%= form_for [@order, @return_authorization] do |f| %>
  <fieldset class="no-border-top">
    <%= render partial: 'form', locals: { f: f } %>

    <div class="form-buttons filter-actions actions" data-hook="buttons">
      <%= f.submit t('spree.actions.create'), class: 'btn btn-primary' %>
      <%= link_to t('spree.actions.cancel'), order_return_authorizations_url(@order), class: 'btn btn-primary' %>
    </div>
  </fieldset>
<% end %>
