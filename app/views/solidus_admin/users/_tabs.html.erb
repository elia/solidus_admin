<% content_for :tabs do %>
  <nav>
    <ul class='tabs' data-hook="admin_user_tab_options">
      <li<%== ' class="active"' if current == :account %>>
        <%= link_to t("spree.admin.user.account"), solidus_admin.edit_user_path(@user) %>
      </li>
      <% if can?(:addresses, @user) %>
        <li<%== ' class="active"' if current == :address %>>
          <%= link_to t("spree.admin.user.addresses"), solidus_admin.addresses_user_path(@user) %>
        </li>
      <% end %>
      <% if can?(:orders, @user) %>
        <li<%== ' class="active"' if current == :orders %>>
          <%= link_to t("spree.admin.user.order_history"), solidus_admin.orders_user_path(@user) %>
        </li>
      <% end %>
      <% if can?(:items, @user) %>
        <li<%== ' class="active"' if current == :items %>>
          <%= link_to t("spree.admin.user.items"), solidus_admin.items_user_path(@user) %>
        </li>
      <% end %>
      <% if can?(:read, @user.store_credits.new) %>
        <li<%== ' class="active"' if current == :store_credits %>>
          <%= link_to t("spree.admin.user.store_credit"), solidus_admin.user_store_credits_path(@user) %>
        </li>
      <% end %>
    </ul>
  </nav>
<% end %>
